---
import '../styles/global.css';
---

<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pedro Bustamante | Desarrollador Android</title>
    <meta name="description" content="Portfolio de Pedro Bustamante - Desarrollador Android especializado en Kotlin y Jetpack Compose" />
  </head>
  <body class="overflow-x-hidden">

    <div class="fixed inset-0 -z-10">
      <div class="absolute inset-0 bg-gradient-to-br from-[#121212] via-[#0F9DFF]/20 to-[#3DDC84]/10"></div>
      <div class="absolute top-10 left-10 w-60 h-60 bg-[#3DDC84] rounded-full mix-blend-screen filter blur-2xl opacity-30 animate-android-blob"></div>
      <div class="absolute top-1/3 right-10 w-56 h-56 bg-[#0F9DFF] rounded-full mix-blend-screen filter blur-2xl opacity-25 animate-android-blob animation-delay-3000"></div>
      <div class="absolute bottom-10 left-1/4 w-64 h-64 bg-[#00BCD4] rounded-full mix-blend-screen filter blur-2xl opacity-20 animate-android-blob animation-delay-5000"></div>
      <div class="absolute bottom-20 right-1/3 w-48 h-48 bg-[#3DDC84]/70 rounded-full mix-blend-screen filter blur-2xl opacity-20 animate-android-blob animation-delay-7000"></div>
    </div>

    <slot />
  </body>
</html>

<style>
@keyframes android-blob {
  0%, 100% {
    transform: translate(0,0) scale(1) rotate(0deg);
  }
  25% {
    transform: translate(20px, -20px) scale(1.1) rotate(10deg);
  }
  50% {
    transform: translate(-15px, 25px) scale(0.9) rotate(-10deg);
  }
  75% {
    transform: translate(10px, -15px) scale(1.05) rotate(5deg);
  }
}

.animate-android-blob {
  animation: android-blob 10s ease-in-out infinite;
}

.animation-delay-3000 { animation-delay: 3s; }
.animation-delay-5000 { animation-delay: 5s; }
.animation-delay-7000 { animation-delay: 7s; }
</style>