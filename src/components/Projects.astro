---
import SeijakuListCard from "./SeijakuListCard.astro";
import SeijakuListModal from "./SeijakuListModal.astro";
---

<section id="projects" class="py-20 px-6 dark:bg-[#0F1419]">
  <div class="max-w-4xl mx-auto">
    <div class="fade-in">
      <h2 class="text-4xl md:text-5xl font-bold mb-4 dark:text-[#E4E6EB] text-center" data-i18n="projects.title">Proyectos</h2>
      <p class="text-[#6B7280] dark:text-[#9CA3AF] mb-12 text-center" data-i18n="projects.subtitle">
        Aplicación que demuestra mis habilidades en desarrollo Android
      </p>
    </div>

    <div class="fade-in">
      <SeijakuListCard />
    </div>

    <p class="text-center text-[#6B7280] dark:text-[#9CA3AF] text-sm mt-8" data-i18n="projects.more">
      Más proyectos próximamente...
    </p>
  </div>
</section>

<SeijakuListModal />
