<script>
  import type { Language } from '../i18n/translations';

  function getCurrentLanguage(): Language {
    const saved = localStorage.getItem('language');
    return (saved === 'en' || saved === 'es') ? saved : 'es';
  }

  function updateHeroDescription() {
    const lang = getCurrentLanguage();
    const descElement = document.querySelector('[data-i18n-template="hero.description"]');

    if (descElement) {
      if (lang === 'es') {
        descElement.innerHTML = `
          Especializado en <span class="font-bold text-[#1A1A1A] dark:text-[#E4E6EB]">Kotlin</span> y
          <span class="font-bold text-[#1A1A1A] dark:text-[#E4E6EB]">Jetpack Compose</span>.
          Actualmente trabajando en <span class="font-bold text-[#6366F1]">Helipagos</span>,
          creando soluciones fintech innovadoras.
        `;
      } else {
        descElement.innerHTML = `
          Specialized in <span class="font-bold text-[#1A1A1A] dark:text-[#E4E6EB]">Kotlin</span> and
          <span class="font-bold text-[#1A1A1A] dark:text-[#E4E6EB]">Jetpack Compose</span>.
          Currently working at <span class="font-bold text-[#6366F1]">Helipagos</span>,
          building innovative fintech solutions.
        `;
      }
    }
  }

  // Initialize on load
  updateHeroDescription();

  // Listen for language changes
  window.addEventListener('languagechange', () => {
    updateHeroDescription();
  });
</script>

